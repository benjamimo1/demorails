<%= form_for(song) do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.label :album_id %>
    <%= f.collection_select :album_id, Album.all, :id, :name%>
  </div>

  <div class="field">
    <%= f.label :length, 'Duration in seconds' %>
    <%= f.number_field :length %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.select(:genre, options_for_select([["Rock","Rock"],["Pop","Pop"],["Reggaeton","Reggaeton"],["Cumbia","Cumbia"],["Clasica","Clasica"],["Otros","Otros"]])) %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
