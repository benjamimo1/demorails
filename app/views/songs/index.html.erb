<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Album</th>
      <th>Length</th>
      <th>Genre</th>
      <th>Rank</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.album_id %></td>
        <td><%= song.length %></td>
        <td><%= song.genre %></td>
        <td><%= song.favorited_by.length %></td>
        <td><%= link_to 'Show', song %></td>
        <% if logged_in? and (session["user_id"] == song.user_id or session["user_id"] == 1)%>
          <td><%= link_to 'Edit', edit_song_path(song) %></td>
          <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
  <%= link_to 'New Song', new_song_path %>
<%end%>