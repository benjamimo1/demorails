<p id="notice"><%= notice %></p>
<div class="jumbotron">
    <div class="container text-center">
      <h2>Users</h2>
    </div>
</div>


<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if session["user_id"] != user.id %>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user %></td>
          <% if logged_in? %>
            <td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></td>
          <%end%>
        </tr>
      <% end %>
    <%end%>
  </tbody>
</table>
