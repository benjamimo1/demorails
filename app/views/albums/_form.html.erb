      <%= f.label :songnumber %>
      <%= f.number_field :songnumber %>
    </div>

    <div class="field">
      <%= f.label :artist_id %>
      <%= f.collection_select :artist_id, Artist.all, :id, :name%>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, :value => session[:user_id] %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>

