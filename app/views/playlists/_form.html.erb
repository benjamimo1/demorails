      <ul>
      <% playlist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>
  
  <% if session["user_id"] != 1%>
    <div class="field">
      <label>Public</label>
      <%= f.check_box :public %>
    </div>
  <%else%>
    <%= f.hidden_field :public, :value => true %>
  <%end%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
