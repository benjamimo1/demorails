<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Origin</th>
      <th>Yearsactive</th>
      <th>Members</th>
      <th>Artist</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.description %></td>
        <td><%= artist.genre %></td>
        <td><%= artist.origin %></td>
        <td><%= artist.yearsactive %></td>
        <td><%= artist.members %></td>
        <td><%= artist.id %></td>
        <td><%= artist.favorited_by.length %></td>
        <td><%= link_to 'Show', artist %></td>
        <% if logged_in? and (session["user_id"] == artist.user_id or session["user_id"] == 1)%>
          <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
          <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
  <%= link_to 'New Artist', new_artist_path %>
<%end%>
