<%= form_for(artist) do |f| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.select(:genre, options_for_select([["Rock","Rock"],["Pop","Pop"],["Reggaeton","Reggaeton"],["Cumbia","Cumbia"],["Clasica","Clasica"],["Otros","Otros"]])) %>
  </div>

  <div class="field">
    <%= f.label :origin %>
    <%= f.country_select :origin %>
  </div>

  <div class="field">
    <%= f.label :yearsactive %>
    <%= f.number_field :yearsactive %>
  </div>

  <div class="field">
    <%= f.label :members %>
    <%= f.text_area :members %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

